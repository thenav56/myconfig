# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator=false
separator_block_width=14

[speed]
command=$HOME/.config/i3blocks/speed.sh
interval=2

[wireless]
label=
instance=wlp2s0
command=$HOME/.config/i3blocks/network
interval=2

#[ethernet]
#label=
#instance=enp4s0
#command=$HOME/.config/i3blocks/network
#color=#00FF00
#interval=10

[user]
label= 
command=whoami
interval=10000

[disk]
label=
command=$HOME/.config/i3blocks/disk
interval=30

[cpu]
label=
command=/usr/share/i3blocks/cpu_usage
interval=10

[cpu_temp]
label=
command=/usr/share/i3blocks/temperature
interval=10

[battery]
command=$HOME/.config/i3blocks/battery
#command= echo "20% \n \#00FF00";
interval=30
#label= 

[date]
command=echo "`date +'%g %b %d(%a)'`"
interval=1
label=

[time]
command=echo "`date +'%l:%M %P'`"
interval=1
label=

[volume]
label=
instance=Master
command=$HOME/.config/i3blocks/volume
interval=1
signal=10

[Brightness]
label=
instance=Master
command=$HOME/.config/i3blocks/brightness
interval=1
signal=10
color=#ffff66
