# ------------------ my keybindings -------------------

# ** Pulse Audio Controls **
# increase sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse  sset Master 5%+
# decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse  sset Master 5%-
# toggle mute
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master toggle
# increase brightness 255max
bindsym XF86MonBrightnessUp exec  /usr/local/bin/brightnessCon +
# decrease brightness
bindsym XF86MonBrightnessDown exec  /usr/local/bin/brightnessCon -
# decrease brightness
# previous workspace
bindsym $mod+Ctrl+h workspace prev
# next workspace
bindsym $mod+Ctrl+l workspace next


# ScreenEat whole
bindsym $mod+p exec --no-startup-id /home/navinir/github/ScreenEat/ScreenEat.py
# ScreenEat Active window
bindsym $mod+o exec --no-startup-id /home/navinir/github/ScreenEat/ScreenEat.py --active
# ScreenEat cropped
bindsym $mod+i exec --no-startup-id /home/navinir/github/ScreenEat/ScreenEat.py --cropped

# firefox shortcut
bindsym $mod+Ctrl+w exec --no-startup-id /usr/bin/firefox

# nautilus shortcut
bindsym $mod+Ctrl+f exec --no-startup-id nautilus --no-desktop

# clementine shortcut
bindsym $mod+Ctrl+m exec --no-startup-id /usr/bin/clementine

# viber shortcut
bindsym $mod+Ctrl+v exec --no-startup-id /opt/viber/Viber

