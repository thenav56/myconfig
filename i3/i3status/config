order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
#order += "load"
order += "tztime local"
order += "volume master"


wireless wlan0 {
        format_up = "W: (%essid)"  #%quality at 
        format_down = "W: down"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: Nop"
}

battery 0 {
        format = "%status %percentage %remaining"
        last_full_capacity  = true 
}

